PROGRAM FIBONACCI (INPUT,OUTPUT);

VAR FIRST,SECOND: INTEGER;

FUNCTION NEXTNUM(FIRST,SECOND:INTEGER):INTEGER;
BEGIN
   NEXTNUM:= FIRST+SECOND;
END;

PROCEDURE GETNUM(VAR FIRST,SECOND: INTEGER);
BEGIN
   WRITELN('ENTER THE FIRST TWO NUMBERS OF THE SEQUENCE ');
   WRITELN('ON DIFFERENT LINES.');
   READLN(FIRST);
   READLN(SECOND);
END;

PROCEDURE COMPUTESEQ(VAR NEXTNUMBER,SUM,FIRST,SECOND: INTEGER);
BEGIN
 NEXTNUMBER:=NEXTNUM(FIRST,SECOND);
 SUM := SUM + NEXTNUMBER;
 FIRST := SECOND;
 SECOND:= NEXTNUMBER;
 WRITE(',',NEXTNUMBER:1);
END;

PROCEDURE REPORTANSWERS(FIRST,SECOND: INTEGER);
VAR SUM,PRODUCT,COUNTER,NEXTNUMBER: INTEGER;
BEGIN
SUM := (FIRST + SECOND);
WRITE(FIRST:1,',',SECOND:1);

   FOR COUNTER := 3 TO 10 DO
       CASE COUNTER OF
           3,4,5,6,8,9,10: BEGIN
                              COMPUTESEQ(NEXTNUMBER,SUM,FIRST,SECOND);

                           END;
           7: BEGIN
                 COMPUTESEQ(NEXTNUMBER,SUM,FIRST,SECOND);

                 PRODUCT:=NEXTNUMBER * 11;
              END;
       END; {CASE}

WRITELN;
WRITELN('THE SUM OF THE NUMBERS IS: ',SUM:1);
WRITELN('ELEVEN TIMES THE SEVENTH TERM IS: ',PRODUCT:1);
END;

BEGIN
GETNUM(FIRST,SECOND);
REPORTANSWERS(FIRST,SECOND);
END.
