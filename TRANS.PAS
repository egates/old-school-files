PROGRAM BANKACCOUNT (INPUT,OUTPUT);
VAR BALANCE: REAL;
    NUMOFTRANS,TRANSCOUNT: INTEGER;
    TRANTYPE: CHAR;

PROCEDURE NUMTRANSANDBALANCE(VAR NUMOFTRANS:INTEGER;
                             VAR BALANCE: REAL);
BEGIN
   WRITELN('ENTER NUMBER OF TRANSACTIONS');
   READLN(NUMOFTRANS);
   WRITELN('ENTER BALANCE');
   READLN(BALANCE);
END;


PROCEDURE UPDATEBALANCE(    AMOUNT:  REAL;
                        VAR BALANCE: REAL;
                            CRORDR:  INTEGER);
VAR UPDATEAMOUNT: REAL;
BEGIN
   UPDATEAMOUNT:=(AMOUNT*CRORDR);
   BALANCE:=(BALANCE + UPDATEAMOUNT);
END;

PROCEDURE REPORTBALANCE(BALANCE: REAL);
BEGIN
   WRITELN('BALANCE IS  $',BALANCE:1:2);
END;

PROCEDURE DEPOSIT(VAR BALANCE: REAL);
CONST CREDIT = 1;
VAR  NUMOFDEPOSITS,COUNTER: INTEGER;
     DEPAMOUNT: REAL;
BEGIN
  WRITELN('HOW MANY?');
  READLN(NUMOFDEPOSITS);
  WRITELN('AMOUNTS?');
  FOR COUNTER:= 1 TO NUMOFDEPOSITS DO
    BEGIN
                READ(DEPAMOUNT);
                CASE COUNTER OF
                 1: WRITELN(NUMOFDEPOSITS:1,' DEPOSIT(s) FOR:');
                END;
                WRITE('$',DEPAMOUNT:1:2,' ');
                UPDATEBALANCE(DEPAMOUNT,BALANCE,CREDIT);
         END;
  READLN;
  WRITELN;
  WRITELN;
  REPORTBALANCE(BALANCE);
END;

BEGIN
NUMTRANSANDBALANCE(NUMOFTRANS,BALANCE);
FOR TRANSCOUNT:= 1 TO NUMOFTRANS DO
 BEGIN
    WRITELN('TRANTYPE?');
    READLN(TRANTYPE);
    CASE TRANTYPE OF
        'D': DEPOSIT(BALANCE);
        'B': REPORTBALANCE(BALANCE);
    END;
 END;
 END.









